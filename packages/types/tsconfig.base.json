{
  "compilerOptions": {
	"composite": true,
	"sourceMap": true,
	"rootDir": "src",
	"allowSyntheticDefaultImports": true,
	"strict": true,
	"forceConsistentCasingInFileNames": true,
	"moduleResolution": "node",
	"skipLibCheck": true,
	"importHelpers": true,
	"isolatedModules": true,
	"declaration": true,
	"declarationMap": true,
	"esModuleInterop": true,
	"baseUrl": "./",
	"plugins": [
	  {
		"transform": "typescript-transform-paths"
	  },
	  {
		"transform": "typescript-transform-paths",
		"afterDeclarations": true
	  }
	]
  }
}
