{
  "compilerOptions": {
	"lib": [
	  "es6",
	  "DOM",
	  "DOM.Iterable"
	],
	"rootDir": "src",
	"module": "commonjs",
	"target": "es5",
	"strict": true,
	"forceConsistentCasingInFileNames": true,
	"moduleResolution": "node",
	"skipLibCheck": true,
	"importHelpers": true,
	"isolatedModules": true,
	"outDir": "dist",
	"declaration": true,
	"declarationMap": true,
	"composite": true,
	"incremental": true,
	"esModuleInterop": true,
	// "bun-types" is the important part
	"types": [
	  "bun-types"
	]
  },
  "include": [
	"src/**/*.ts"
  ],
  "exclude": [
	"node_modules",
	"dist"
  ]
}
