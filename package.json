{
  "author": "Omri Levy",
  "private": false,
  "name": "dry-express-responses",
  "version": "0.0.25",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
	"/dist"
  ],
  "license": "ISC",
  "repository": {
	"type": "git",
	"url": "https://github.com/Omri-Levy/dry-express-responses"
  },
  "description": "ExpressJS middleware to reduce boilerplate in response creation",
  "keywords": [
	"express",
	"response",
	"middleware",
	"http-status-codes",
	"typescript",
	"http",
	"status"
  ],
  "scripts": {
	"test": "echo \"Will add tests soon\"",
	"clean": "rimraf dist",
	"build:esm": "tsc --project ./tsconfig.json",
	"build:cjs": "tsc --project ./tsconfig.cjs.json",
	"build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
	"watch": "tsc --project ./tsconfig.json -w",
	"release": "pnpm build && standard-version && git push --follow-tags origin main && npm publish",
	"commitizen:init": "commitizen init cz-conventional-changelog --save-dev --save-exact",
	"prepare": "husky install",
	"commit": "git add . && git-cz",
	"lint": "eslint ./src/**/*.{js,ts}",
	"format": "prettier ./src/**/*.{js,ts}",
	"typecheck": "tsc --noEmit --project ./tsconfig.json"
  },
  "config": {
	"commitizen": {
	  "path": "./node_modules/cz-conventional-changelog"
	}
  },
  "devDependencies": {
	"@babel/preset-typescript": "^7.18.6",
	"@commitlint/cli": "^17.0.3",
	"@commitlint/config-conventional": "^17.0.3",
	"@types/express": "^4.17.13",
	"@typescript-eslint/eslint-plugin": "^5.33.1",
	"@typescript-eslint/parser": "^5.33.1",
	"commitizen": "^4.2.5",
	"cz-conventional-changelog": "^3.3.0",
	"editorconfig": "^0.15.3",
	"eslint": "^8.22.0",
	"eslint-config-prettier": "^8.5.0",
	"husky": "^8.0.1",
	"prettier": "^2.7.1",
	"rimraf": "^3.0.2",
	"standard-version": "^9.5.0",
	"tslib": "^2.4.0",
	"ttypescript": "^1.5.13",
	"typescript-transform-paths": "^3.3.1"
  },
  "dependencies": {
	"http-status-codes": "^2.2.0",
	"yup": "^0.32.11",
	"zod": "^3.18.0"
  }
}
