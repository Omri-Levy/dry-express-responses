{
	"author": "Omri Levy",
	"private": false,
	"name": "dry-express-responses",
	"version": "0.0.11",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "ISC",
	"repository": "https://github.com/Omri-Levy/dry-express-responses",
	"description": "ExpressJS middleware to reduce boilerplate in response creation",
	"keywords": [
		"express",
		"response",
		"middleware",
		"http-status-codes",
		"typescript",
		"http",
		"status"
	],
	"scripts": {
		"test": "echo \"Will add tests soon\"",
		"clean": "rimraf dist",
		"build": "pnpm clean && tsc",
		"prepublish": "pnpm build",
		"watch": "tsc -w",
		"release": "standard-version",
		"commitizen:init": "commitizen init cz-conventional-changelog --save-dev --save-exact",
		"prepare": "husky install",
		"commit": "git add . && git-cz",
		"lint": "eslint src/**/*.{js,ts}",
		"format": "prettier src/**/*.{js,ts}",
		"typecheck": "tsc --noEmit"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.18.6",
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@types/express": "^4.17.13",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"commitizen": "^4.2.5",
		"cz-conventional-changelog": "^3.3.0",
		"editorconfig": "^0.15.3",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"standard-version": "^9.5.0",
		"tslib": "^2.4.0"
	},
	"dependencies": {
		"http-status-codes": "^2.2.0"
	}
}
